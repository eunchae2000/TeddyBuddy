<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/teddybuddylogoblack"
        android:layout_width="350dp"
        android:layout_height="200dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/connectheart"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:background="@drawable/shape_for_circle_button"
                android:id="@+id/friend1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/plus" />
            <TextView
                android:id="@+id/friendinfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/goodfont"
                android:textSize="40dp"
                android:inputType="text"
                android:text="친구1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageButton
                android:background="@drawable/shape_for_circle_button"
                android:id="@+id/friend2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/plus" />
            <TextView
                android:id="@+id/friendinfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/goodfont"
                android:textSize="40dp"
                android:inputType="text"
                android:text="친구2" />
        </LinearLayout>
        <LinearLayout
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageButton
                android:background="@drawable/shape_for_circle_button"
                android:id="@+id/friend3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/plus" />
            <TextView
                android:id="@+id/friendinfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/goodfont"
                android:textSize="40dp"
                android:inputType="text"
                android:text="친구3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>